# Environment Configuration Template
# Copy this file to .env and fill in your actual values
# NEVER commit the actual .env file to version control

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL connection string with SSL
DATABASE_URL=postgresql://username:password@localhost:5432/provider_validation_db
DATABASE_SSL_CERT_PATH=/path/to/db-cert.pem
DATABASE_SSL_KEY_PATH=/path/to/db-key.pem
DATABASE_SSL_ROOT_CERT_PATH=/path/to/ca-cert.pem

# Database encryption settings
DATABASE_ENCRYPTION_ENABLED=true
DATABASE_ENCRYPTION_KEY_ID=your-kms-key-id
DATABASE_BACKUP_ENCRYPTION_KEY_ID=your-backup-kms-key-id

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================
# JWT configuration (use RSA keys for production)
JWT_SECRET_KEY=your-rsa-private-key-here
JWT_PUBLIC_KEY=your-rsa-public-key-here
JWT_ALGORITHM=RS256
JWT_ACCESS_TOKEN_EXPIRY=900
JWT_REFRESH_TOKEN_EXPIRY=604800

# =============================================================================
# ENCRYPTION KEYS
# =============================================================================
# PII encryption key (32 bytes base64 encoded)
ENCRYPTION_KEY=your-32-byte-encryption-key-base64-encoded
ENCRYPTION_SALT=your-16-byte-salt-base64-encoded

# =============================================================================
# EXTERNAL API KEYS
# =============================================================================
# NPI Registry API
NPI_API_KEY=your-npi-registry-api-key
NPI_API_BASE_URL=https://npiregistry.cms.hhs.gov/api/

# Google Places/Maps API
GOOGLE_PLACES_API_KEY=your-google-places-api-key
GOOGLE_GEOCODING_API_KEY=your-google-geocoding-api-key

# State Medical Board API (if using real API)
STATE_BOARD_API_KEY=your-state-board-api-key
STATE_BOARD_API_BASE_URL=https://api.stateboard.example.com/

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
# Redis connection for rate limiting and caching
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=your-redis-password
REDIS_SSL_ENABLED=false
REDIS_SSL_CERT_PATH=/path/to/redis-cert.pem
REDIS_SSL_KEY_PATH=/path/to/redis-key.pem

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Rate limiting configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_GLOBAL_REQUESTS_PER_MINUTE=1000
RATE_LIMIT_GLOBAL_REQUESTS_PER_HOUR=10000
RATE_LIMIT_GLOBAL_REQUESTS_PER_DAY=100000

# CORS configuration
CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com
CORS_CREDENTIALS=true
CORS_MAX_AGE=86400

# CSRF configuration
CSRF_SECRET_KEY=your-csrf-secret-key
CSRF_TOKEN_EXPIRY=3600

# =============================================================================
# MONITORING AND LOGGING
# =============================================================================
# Logging level
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_PATH=/var/log/provider-validation/application.log

# Sentry for error tracking
SENTRY_DSN=your-sentry-dsn-here
SENTRY_ENVIRONMENT=production

# Prometheus metrics
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# =============================================================================
# FILE STORAGE
# =============================================================================
# AWS S3 configuration (if using cloud storage)
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-west-2
AWS_S3_BUCKET=your-s3-bucket-name

# Local file storage
LOCAL_STORAGE_PATH=/var/lib/provider-validation/uploads
MAX_FILE_SIZE_MB=100
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,doc,docx

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# SMTP configuration for notifications
SMTP_HOST=smtp.yourdomain.com
SMTP_PORT=587
SMTP_USERNAME=your-smtp-username
SMTP_PASSWORD=your-smtp-password
SMTP_USE_TLS=true
SMTP_USE_SSL=false

# Email templates
EMAIL_FROM_ADDRESS=noreply@yourdomain.com
EMAIL_FROM_NAME=Provider Validation System

# =============================================================================
# DATA RETENTION POLICY
# =============================================================================
# Retention periods in days
PROVIDER_DATA_RETENTION_DAYS=2555
AUDIT_LOG_RETENTION_DAYS=3650
VALIDATION_RESULT_RETENTION_DAYS=1825
TEMP_FILE_RETENTION_DAYS=30
RAW_SCAN_RETENTION_DAYS=90

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
# Database backup settings
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION_ENABLED=true

# Backup storage
BACKUP_STORAGE_TYPE=s3
BACKUP_S3_BUCKET=your-backup-bucket
BACKUP_LOCAL_PATH=/var/backups/provider-validation

# =============================================================================
# HEALTH CHECK CONFIGURATION
# =============================================================================
# Health check endpoints
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
# Development mode (set to false in production)
DEBUG=false
DEVELOPMENT_MODE=false

# API documentation
API_DOCS_ENABLED=true
API_DOCS_URL=/docs
API_REDOC_URL=/redoc

# =============================================================================
# SECURITY POLICIES
# =============================================================================
# Session configuration
SESSION_SECRET_KEY=your-session-secret-key
SESSION_COOKIE_NAME=provider_validation_session
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=strict

# Password policy
PASSWORD_MIN_LENGTH=12
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL_CHARS=true
PASSWORD_HISTORY_COUNT=5

# Account lockout policy
ACCOUNT_LOCKOUT_ENABLED=true
ACCOUNT_LOCKOUT_THRESHOLD=5
ACCOUNT_LOCKOUT_DURATION_MINUTES=30

# =============================================================================
# COMPLIANCE CONFIGURATION
# =============================================================================
# HIPAA compliance settings
HIPAA_COMPLIANCE_ENABLED=true
HIPAA_AUDIT_LOGGING_ENABLED=true
HIPAA_DATA_ENCRYPTION_ENABLED=true

# SOC 2 compliance settings
SOC2_COMPLIANCE_ENABLED=true
SOC2_AUDIT_LOGGING_ENABLED=true
SOC2_ACCESS_CONTROL_ENABLED=true

# =============================================================================
# NOTIFICATION CONFIGURATION
# =============================================================================
# Security alert notifications
SECURITY_ALERT_EMAIL=enabled
SECURITY_ALERT_WEBHOOK_URL=https://your-monitoring-system.com/webhook
SECURITY_ALERT_SLACK_WEBHOOK=https://hooks.slack.com/services/your/slack/webhook

# System notifications
SYSTEM_NOTIFICATION_EMAIL=admin@yourdomain.com
SYSTEM_NOTIFICATION_SLACK_CHANNEL=#alerts

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
# Redis cache settings
CACHE_ENABLED=true
CACHE_DEFAULT_TTL=3600
CACHE_MAX_SIZE_MB=1024

# Application cache
APP_CACHE_ENABLED=true
APP_CACHE_TTL=1800

# =============================================================================
# QUEUE CONFIGURATION
# =============================================================================
# Redis Queue settings
RQ_ENABLED=true
RQ_REDIS_URL=redis://localhost:6379/1
RQ_WORKER_COUNT=4
RQ_JOB_TIMEOUT=3600

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Feature toggles
FEATURE_PII_REVEAL_ENABLED=true
FEATURE_BULK_OPERATIONS_ENABLED=true
FEATURE_AUDIT_EXPORT_ENABLED=true
FEATURE_REAL_TIME_NOTIFICATIONS_ENABLED=true
FEATURE_ADVANCED_ANALYTICS_ENABLED=false

# =============================================================================
# EXTERNAL INTEGRATIONS
# =============================================================================
# Third-party service integrations
INTEGRATION_SLACK_ENABLED=false
INTEGRATION_TEAMS_ENABLED=false
INTEGRATION_JIRA_ENABLED=false

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
# Database connection pool
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30

# Request timeout settings
REQUEST_TIMEOUT_SECONDS=30
VALIDATION_TIMEOUT_SECONDS=300
EXPORT_TIMEOUT_SECONDS=600

# =============================================================================
# SSL/TLS CONFIGURATION
# =============================================================================
# SSL certificate paths
SSL_CERT_PATH=/path/to/ssl-cert.pem
SSL_KEY_PATH=/path/to/ssl-key.pem
SSL_CA_CERT_PATH=/path/to/ca-cert.pem

# TLS configuration
TLS_VERSION=1.3
TLS_CIPHER_SUITES=ECDHE+AESGCM:ECDHE+CHACHA20:DHE+AESGCM:DHE+CHACHA20:!aNULL:!MD5:!DSS

# =============================================================================
# BACKUP AND DISASTER RECOVERY
# =============================================================================
# Disaster recovery settings
DR_ENABLED=true
DR_REPLICATION_ENABLED=true
DR_FAILOVER_ENABLED=true
DR_RTO_MINUTES=15
DR_RPO_MINUTES=5

# =============================================================================
# COMPLIANCE REPORTING
# =============================================================================
# Compliance report settings
COMPLIANCE_REPORTS_ENABLED=true
COMPLIANCE_REPORT_SCHEDULE=0 0 1 * *
COMPLIANCE_REPORT_RETENTION_DAYS=2555

# =============================================================================
# NOTES
# =============================================================================
# 1. All secret keys should be at least 32 characters long
# 2. Use strong, unique passwords for all services
# 3. Rotate keys regularly (every 90 days recommended)
# 4. Use environment-specific values for different deployments
# 5. Never commit actual secrets to version control
# 6. Use a secrets management service in production (AWS Secrets Manager, Azure Key Vault, etc.)
# 7. Enable audit logging for all secret access
# 8. Implement proper backup and recovery procedures
# 9. Regular security assessments and penetration testing
# 10. Monitor and alert on suspicious activities
